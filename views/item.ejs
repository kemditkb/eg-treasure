  <script type="text/javascript">
    $(function () {
      $('.s_img').click(function () {
        var img = $(this).find('img').attr('src');
        $('#b_img').attr('src', img);
      });
    });

    $(function () {
      $('#countdown_dashboard').countDown({
        omitWeeks: true,
        targetDate: {
          'day': 1,
          'month': 6,
          'year': 2018,
          'hour': 0,
          'min': 0,
          'sec': 0
        }
      });
    })

    $(function () {
      $('input[type=radio][name=bid_type]').change(function () {

        if (this.value == 1) {
          console.log(this.value);
          $('#bid_message').html('請輸入出價金額');
        } else {
          console.log(this.value);
          $('#bid_message').html('請輸入出價上限，系統將自動依增額出價至上限金額');
        }
      })
    })

  </script>