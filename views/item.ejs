                    </div>
                  </fieldset>
                  <div class="col-12 bg-warning">
                    <div class="text-white">
                      <p id="bid_message">請輸入出價金額</p>
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-12">
                      <input type="text" class="form-control" id="inputPrice" placeholder="請出價">
                    </div>
                  </div>
                  <div class="form-group row">
                    <div class="col-12">
                      <button type="submit" class="btn btn-primary btn-block">出價</button>
                    </div>
                  </div>
                </form>
              </div>
              <div class="col-md-6"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
