<% layout('layout_treasure') %>
  <style>
    #countdown_dashboard {
      height: 70px;
    }

    #countdown_dashboard .dash {
      width: 72px;
      height: 75px;
      background: url(/images/dash.png) no-repeat;
      float: left;
      margin: 0 2px;
      position: relative;
    }

    #countdown_dashboard .dash .digit {
      font-size: 30pt;
      font-weight: bold;
      float: left;
      width: 32px;
      text-align: center;
      font-family: Verdana, Geneva, sans-serif;
      color: #555;
      position: relative;
      padding-left: 4px;
    }

    #countdown_dashboard .dash_title {
      position: absolute;
      display: block;
      bottom: 16px;
      right: 2px;
      font-size: 9pt;
      color: #ff8400;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    #countdown_dashboard .dash_icon {
      font-size: 18pt;
    }
  </style>
