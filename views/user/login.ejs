<% layout('../layout/basic') %>
  <div class="container h-100">
    <div class="row flex-column justify-content-center align-items-center h-100">
      <div class="brand py-3">
        <img src="/images/logo.png" width="180" height="40" alt="">
      </div>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center mb-4 mt-1">會員登入</h4>
          <hr>
          <p class="text-success text-center"></p>
          <form method="post" action="/user/login">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fa fa-user"></i>
                  </span>
                </div>
                <input name="email" class="form-control" placeholder="郵件地址" type="email">
              </div>
              <!-- input-group.// -->
            </div>
            <!-- form-group// -->
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="fa fa-lock"></i>
                  </span>
                </div>
                <input name="password" class="form-control" placeholder="******" type="password">
              </div>
              <!-- input-group.// -->
            </div>
            <!-- form-group// -->
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">登入</button>
            </div>
            <!-- form-group// -->
            <p class="text-center">
              <a href="/user/forgot" class="btn">忘記密碼</a>
            </p>
          </form>
        </div>
      </div>
      <!-- card.// -->
    </div>

  </div>