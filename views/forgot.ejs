<% layout('layout_basic') %>
  <div class="container h-100">
    <div class="row flex-column justify-content-center align-items-center h-100">
      <div class="brand py-3">
        <img src="/images/logo.png" width="180" height="40" alt="">
      </div>
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center mb-4 mt-1">重置密碼</h4>
          <hr>
          <p class="text-success text-center"></p>
          <form method="post" action="/user/forgot">
            <div class="form-group">
              <div class="input-group">
                <input name="email" class="form-control" placeholder="郵件地址" type="email">
              </div>
              <!-- input-group.// -->
            </div>
            <!-- form-group// -->
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">送出</button>
            </div>
            <!-- form-group// -->
            <div class="d-flex justify-content-between">
              <p class="text-center">
                <a href="/user/register" class="btn">註冊</a>
              </p>
              <p class="text-center">
                <a href="/user/login" class="btn">登入</a>
              </p>
              <p class="text-center">
                <a href="/" class="btn">返回首頁</a>
              </p>
            </div>

          </form>
        </div>
      </div>
      <!-- card.// -->
    </div>

  </div>